<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>pluu.template</id>
    <name>Pluu Android Studio Wizard</name>
    <vendor>Pluu</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <description>
        <![CDATA[
      Demonstrates working with the Project Wizard.
    ]]>
    </description>

    <extensions defaultExtensionNs="com.android">
        <tools.idea.wizard.template.wizardTemplateProvider implementation="com.pluu.plugin.WizardTemplateProviderImpl"/>
        <moduleDescriptionProvider implementation="com.pluu.plugin.module.FeatureModuleDescriptionProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <fileTemplateGroup implementation="com.pluu.plugin.FileTemplateProviderImpl"/>
    </extensions>

    <actions>
        <group id="com.pluu.plugin.wizard" popup="true"
               text="Pluu Templates"
               icon="PluuIcons.Konata">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <add-to-group group-id="NewGroup" relative-to-action="NewDir" anchor="after"/>

            <action id="com.pluu.plugin.wizard.action.feature"
                    class="com.pluu.plugin.action.FeatureModuleCreateWizardAction"/>
            <separator/>
            <action id="com.pluu.plugin.action.viewmodel"
                    class="com.pluu.plugin.action.ViewModelCreateFileFromTemplateAction"/>
            <action id="com.pluu.plugin.wizard.action.activity"
                    class="com.pluu.plugin.action.ActivityCreateWizardAction"/>
            <action id="com.pluu.plugin.wizard.action.fragment"
                    class="com.pluu.plugin.action.FragmentCreateWizardAction"/>
        </group>

        <action id="com.pluu.plugin.wizard.action.testcreator.viewmodel"
                class="com.pluu.plugin.action.testIntegration.ViewModelTestCreatorAction"
                icon="PluuIcons.Konata">
            <add-to-group group-id="EditorLangPopupMenu" relative-to-action="Generate" anchor="after"/>
        </action>
    </actions>
</idea-plugin>
