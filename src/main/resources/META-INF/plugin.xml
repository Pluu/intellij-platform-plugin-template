<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>pluu.template</id>
    <name>Pluu Android Studio Wizard</name>
    <vendor>Pluu</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <!-- We define the dependencies we will use. -->
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <description>
        <![CDATA[
      Demonstrates working with the Project Wizard.
    ]]>
    </description>

    <extensions defaultExtensionNs="com.android">
        <tools.idea.wizard.template.wizardTemplateProvider
                implementation="com.pluu.plugin.wizard.WizardTemplateProviderImpl"/>
        <moduleDescriptionProvider implementation="com.pluu.plugin.module.feature.FeatureModuleDescriptionProvider"/>
        <moduleDescriptionProvider
                implementation="com.pluu.plugin.module.sample.FeatureSampleModuleDescriptionProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.pluu.plugin.toolWindow.designsystem.rendering.FetchImageExecutor"/>
        <customPasteProvider implementation="com.pluu.plugin.toolWindow.designsystem.model.ResourcePasteProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileTemplateGroup implementation="com.pluu.plugin.FileTemplateProviderImpl"/>
        <internalFileTemplate name="ActivityTest"/>

        <codeInsight.template.postfixTemplateProvider
                language="kotlin"
                implementationClass="com.pluu.plugin.codeInsight.postfix.PluuPostfixTemplateProvider"/>

        <library.toolWindow
                id="Design System"
                anchor="left"
                icon="PluuIcons.Konata_32"
                doNotActivateOnStart="true"
                librarySearchClass="com.android.tools.idea.sdk.AndroidFacetChecker"
                factoryClass="com.pluu.plugin.toolWindow.designsystem.DesignSystemToolWindowFactory"/>
    </extensions>

    <actions>
        <group id="com.pluu.plugin.wizard" popup="true"
               text="Pluu Templates"
               icon="PluuIcons.Konata">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <add-to-group group-id="NewGroup" relative-to-action="NewDir" anchor="after"/>

            <action id="com.pluu.plugin.wizard.action.feature"
                    class="com.pluu.plugin.action.FeatureModuleCreateWizardAction"/>
            <action id="com.pluu.plugin.wizard.action.feature.sample"
                    class="com.pluu.plugin.action.FeatureSampleModuleCreateWizardAction"/>
            <separator/>
            <action id="com.pluu.plugin.action.viewmodel"
                    class="com.pluu.plugin.action.ViewModelCreateFileFromTemplateAction"/>
            <action id="com.pluu.plugin.wizard.action.activity"
                    class="com.pluu.plugin.action.ActivityCreateWizardAction"/>
            <action id="com.pluu.plugin.wizard.action.fragment"
                    class="com.pluu.plugin.action.FragmentCreateWizardAction"/>
        </group>

        <group>
            <action id="com.pluu.plugin.wizard.action.testcreator.viewmodel"
                    class="com.pluu.plugin.action.testIntegration.ViewModelTestCreatorAction"
                    icon="PluuIcons.Konata"/>
            <action id="com.pluu.plugin.wizard.action.testcreator.activity"
                    class="com.pluu.plugin.action.testIntegration.ActivityUiTestCreatorAction"
                    icon="PluuIcons.Konata"/>
            <add-to-group group-id="EditorLangPopupMenu" relative-to-action="Generate" anchor="after"/>
        </group>
    </actions>
</idea-plugin>
