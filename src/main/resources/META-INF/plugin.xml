<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>pluu.template</id>
    <name>Pluu Android Studio Wizard</name>
    <vendor>Pluu</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <description>
        <![CDATA[
      Demonstrates working with the Project Wizard.
    ]]>
    </description>

    <extensions defaultExtensionNs="com.android">
        <tools.idea.wizard.template.wizardTemplateProvider implementation="com.pluu.plugin.WizardTemplateProviderImpl"/>
        <moduleDescriptionProvider implementation="com.pluu.plugin.module.FeatureModuleDescriptionProvider" />
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <fileTemplateGroup implementation="com.pluu.plugin.FileTemplateProviderImpl"/>
    </extensions>

    <actions>
        <group icon="StudioIcons.Common.ANDROID_HEAD" id="com.pluu.plugin.wizard" popup="true"
               text="Pluu Templates">
            <action class="com.pluu.plugin.action.ViewModelCreateFileFromTemplateAction"
                    id="com.pluu.plugin.action.viewmodel"/>
            <action class="com.pluu.plugin.action.ActivityCreateWizardAction"
                    id="com.pluu.plugin.wizard.action.activity"/>
            <action class="com.pluu.plugin.action.FragmentCreateWizardAction"
                    id="com.pluu.plugin.wizard.action.fragment"/>
            <action class="com.pluu.plugin.action.FeatureModuleCreateWizardAction"
                    id="com.pluu.plugin.wizard.action.feature"/>
            <add-to-group anchor="after" group-id="NewGroup" relative-to-action="NewDir"/>
        </group>
    </actions>
</idea-plugin>
